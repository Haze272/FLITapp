<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_tile_image_who"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/ic_stepanio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_tile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="Наиль Нариманыч"
        android:textColor="@color/header_black"
        android:textFontWeight="700"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/chat_tile_image_who"
        app:layout_constraintTop_toTopOf="@+id/chat_tile_image_who" />

    <TextView
        android:id="@+id/chat_tile_last_message"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/inter"
        android:text="Надо по одной мазе кабанчиком метнуться.."
        android:textColor="#000000"
        android:textFontWeight="500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_tile_image_who"
        app:layout_constraintTop_toBottomOf="@+id/chat_tile_name" />
</androidx.constraintlayout.widget.ConstraintLayout>